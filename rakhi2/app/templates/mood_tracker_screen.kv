<MoodTrackerScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        Label:
            text: 'Mood Tracker'
            font_size: 24
        TextInput:
            id: mood_input
            hint_text: 'Enter your mood'
        Button:
            text: 'Submit Mood'
            on_release: app.root.get_screen('mood_tracker').submit_mood(mood_input.text)
        ScrollView:
            BoxLayout:
                id: moods_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height

        Button:
            text: 'Back to Home'
            on_release: app.root.current = 'home'

