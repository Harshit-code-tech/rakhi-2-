<AuthScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Welcome to My Daily Companion App"
            font_size: 24

        TextInput:
            id: username_input
            hint_text: "Username"
            multiline: False

        TextInput:
            id: password_input
            hint_text: "Password"
            password: True
            multiline: False

        Button:
            text: "Login"
            on_release: root.try_login()

        Button:
            text: "Register"
            on_release: root.try_register()

        Label:
            id: login_message
            text: ""
            color: 1, 0, 0, 1
