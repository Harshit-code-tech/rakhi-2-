<AuthScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 50, 50, 50]
        spacing: 10

        Label:
            text: "Username"
        TextInput:
            id: username
            multiline: False

        Label:
            text: "Password"
        TextInput:
            id: password
            multiline: False
            password: True

        BoxLayout:
            spacing: 10
            Button:
                text: "Login"
                on_press: root.authenticate_user()
            Button:
                text: "Register"
                on_press: root.register_user()
