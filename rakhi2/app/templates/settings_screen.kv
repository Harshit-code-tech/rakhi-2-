<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        Label:
            text: 'Settings'
            font_size: 24
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Set Reminder (HH:MM):'
            TextInput:
                id: reminder_time_input
                hint_text: 'e.g., 14:30'
        Button:
            text: 'Set Reminder'
            on_release: app.root.get_screen('settings').set_reminder()
        Button:
            text: 'Back to Home'
            on_release: app.root.current = 'home_screen'
