<HabitTrackerScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        Label:
            text: 'Habit Tracker'
            font_size: 24
        TextInput:
            id: habit_input
            hint_text: 'Enter your habit'
        Button:
            text: 'Submit Habit'
            on_release: app.root.get_screen('habit_tracker').submit_habit(habit_input.text)
        ScrollView:
            BoxLayout:
                id: habits_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
        Button:
            text: 'Back to Home'
            on_release: app.root.current = 'home_screen'
