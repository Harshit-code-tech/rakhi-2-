<RewardsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        Label:
            text: 'Rewards'
            font_size: 24
        ProgressBar:
            id: reward_progress
            max: 100
            value: 0
        Label:
            id: reward_points
            text: '0 Points'
            font_size: 18
        Button:
            text: 'Back to Home'
            on_release: app.root.current = 'home'
        Button:
            text: 'Claim Reward'
            on_release: app.root.get_screen('rewards').claim_reward()
        Button:
            text: 'Reset Rewards'
            on_release: app.root.get_screen('rewards').reset_rewards()
        Button:
            text: 'Add Reward'
            on_release: app.root.get_screen('rewards').add_reward()
        ScrollView:
            BoxLayout:
                id: rewards_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
