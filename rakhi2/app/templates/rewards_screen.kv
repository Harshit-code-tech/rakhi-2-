<RewardsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        Label:
            text: 'Rewards'
            font_size: 24
        Label:
            id: mood_rewards
            text: 'Total Moods Tracked: 0'
        Label:
            id: habit_rewards
            text: 'Total Habits Tracked: 0'
        Label:
            id: reward_message
            text: 'Keep tracking your moods and habits to earn rewards!'
        Button:
            text: 'Back to Home'
            on_release: app.root.current = 'home_screen'
