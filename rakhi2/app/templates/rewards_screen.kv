# rewards_screen.kv
<RewardsScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Rewards Screen'
            font_size: 24
        Label:
            id: mood_rewards
            text: 'Total Moods Tracked: 0'
        Label:
            id: habit_rewards
            text: 'Total Habits Tracked: 0'
        Label:
            id: reward_message
            text: 'Keep tracking to earn rewards!'
            font_size: 18
        Button:
            text: 'Back to Home'
            on_release: app.root.current = 'home'

