<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'Welcome to My Daily Companion App'
            font_size: 32
            color: 1, 1, 1, 1
        Button:
            text: 'Track Mood'
            font_size: 24
            on_release: app.root.current = 'mood_tracker'
        Button:
            text: 'Track Habit'
            font_size: 24
            on_release: app.root.current = 'habit_tracker'
        Button:
            text: 'View Rewards'
            font_size: 24
            on_release: app.root.current = 'rewards'
        Button:
            text: 'View Historical Data'
            font_size: 24
            on_release: app.root.current = 'historical_data'
        Button:
            text: 'Settings'
            font_size: 24
            on_release: app.root.current = 'settings'
