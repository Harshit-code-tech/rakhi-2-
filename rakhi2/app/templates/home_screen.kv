<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        Label:
            text: 'Welcome to My Daily Companion App'
            font_size: 24
        Button:
            text: 'Mood Tracker'
            on_release: app.root.current = 'mood_tracker'
        Button:
            text: 'Habit Tracker'
            on_release: app.root.current = 'habit_tracker'
        Button:
            text: 'Historical Data'
            on_release: app.root.current = 'historical_data'
        Button:
            text: 'Rewards'
            on_release: app.root.current = 'rewards'
        Button:
            text: 'Settings'
            on_release: app.root.current = 'settings'
        Button:
            text: 'Logout'
            on_release: app.root.current = 'login'
        Button:
            text: 'Exit'
            on_release: app.stop()
