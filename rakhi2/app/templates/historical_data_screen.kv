# historical_data_screen.kv
<HistoricalDataScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Moods'
            Label:
                text: 'Habits'
        BoxLayout:
            orientation: 'horizontal'
            ScrollView:
                BoxLayout:
                    id: moods_list
                    orientation: 'vertical'
                    on_kv_post: app.on_kv_post_moods_list(self)
            ScrollView:
                BoxLayout:
                    id: habits_list
                    orientation: 'vertical'
                    on_kv_post: app.on_kv_post_habits_list(self)
