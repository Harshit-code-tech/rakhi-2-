<HistoricalDataScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Historical Data'
        BoxLayout:
            orientation: 'horizontal'
            ScrollView:
                BoxLayout:
                    id: moods_list
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
            ScrollView:
                BoxLayout:
                    id: habits_list
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
        Button:
            text: 'Back to Home'
            on_release: app.root.current = 'home'
