# historical_data_screen.kv
<HistoricalDataScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Moods'
            Label:
                text: 'Habits'
        BoxLayout:
            orientation: 'horizontal'
            ScrollView:
                BoxLayout:
                    id: moods_list
                    orientation: 'vertical'
                    on_kv_post: app.on_kv_post_moods_list(self)
            ScrollView:
                BoxLayout:
                    id: habits_list
                    orientation: 'vertical'
                    on_kv_post: app.on_kv_post_habits_list(self)
        Button:
            text: 'Back to Home'
            size_hint_y: None
            height: '40dp'
            on_release: app.root.current = 'home'
