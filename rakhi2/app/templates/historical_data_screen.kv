<HistoricalDataScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        Label:
            text: 'Historical Data'
            font_size: 24
        Label:
            text: 'Moods:'
        ScrollView:
            BoxLayout:
                id: moods_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
        Label:
            text: 'Habits:'
        ScrollView:
            BoxLayout:
                id: habits_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
        Button:
            text: 'Back to Home'
            on_release: app.root.current = 'home_screen'
