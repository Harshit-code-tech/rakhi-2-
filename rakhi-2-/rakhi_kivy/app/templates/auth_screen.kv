<AuthScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            text: "Login or Register"
            font_size: '24sp'

        TextInput:
            id: username
            hint_text: "Username"
            multiline: False

        TextInput:
            id: password
            hint_text: "Password"
            multiline: False
            password: True

        Button:
            text: "Login"
            on_release: root.login()

        Button:
            text: "Register"
            on_release: root.register()

        Button:
            text: "Clear Fields"
            on_release:
                username.text = ''
                password.text = ''